<%= render "welcome/header" %>
<h1>Listing Posts</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to image_tag("show.png"), post_path(post) %></td>
    <td><%= link_to image_tag("edit.png"), edit_post_path(post) %></td>
    <td><%= link_to image_tag("delete.png"), post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>